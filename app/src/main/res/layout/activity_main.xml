<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/cosmos"
    >



    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lotty_drive1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="-16dp" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lotty_drive2"
                android:layout_width="176dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginLeft="40dp"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="20dp" />
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/images_robots_layout"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/robot_2" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginLeft="44dp"
            android:src="@drawable/robot_1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="206dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_1"
            android:text="name1"
            android:layout_marginLeft="44dp"
            android:textSize="20sp"
            android:textColor="#FFEB3B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_2"
            android:layout_marginLeft="90dp"
            android:text="name2"
            android:textSize="20sp"
            android:textColor="#FFEB3B" />

    </LinearLayout>

    <TextView
        android:id="@+id/ho_will_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="436dp"
        android:text="Who Will Win?"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Energy1 "
            android:textSize="26sp"
            android:textColor="#FFEB3B" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/energy1"
            android:textSize="26sp"
            android:background="#ED0D2F"
            android:textColor="#FFEB3B" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Energy2 "
            android:textSize="26sp"
            android:textColor="#FFEB3B" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/energy2"
            android:textSize="26sp"
            android:background="#3C1385"
            android:textColor="#616FBF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="376dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Laser1   "
            android:textSize="26sp"
            android:textColor="#FFEB3B" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/laser1"
            android:textSize="26sp"
            android:background="#FFEB3B"
            android:textColor="#FF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Laser2  "
            android:textSize="26sp"
            android:textColor="#FFEB3B" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/lasers2"
            android:textSize="26sp"
            android:background="#673AB7"
            android:textColor="#FFEB3B" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="500dp"
        >

        <Button
            android:id="@+id/btn_start"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:backgroundTint="#E91E63"
            android:text="Start"
            android:layout_marginLeft="44dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/btn_fight"
            android:backgroundTint="#FF9800"
            android:text="Fight!"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="97dp"
            android:visibility="invisible"
            />
    </LinearLayout>

    <Button
        android:layout_width="190dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#FFEB3B"
        android:id="@+id/btn_game_over"
        android:text="GAME OVER!"
        android:textSize="28sp"
        android:visibility="invisible"
        android:textColor="@color/black"

        />




</androidx.constraintlayout.widget.ConstraintLayout>